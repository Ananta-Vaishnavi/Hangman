void checkforwin()
{
  a=0;
  if(guess==6)
  {
   printf("Well tried, better luck next time");
  }

	  for(int i=0;i<strlen(word);i++)
  {
  	if((isalpha(blank[i])!=0)||(isdigit(blank[i])!=0))
  	a++;
		}
		if(a==count&&guess!=6)
		printf("You win!!!");
}
int main()
{
	for(int i=0;i<strlen(word);i++)
  {
  	if((isalpha(word[i])!=0)||(isdigit(word[i])!=0))
  	count++;
  	if(isdigit(word[i])!=0)
  	printf("\n=>It contains numbers");
		
}	
	for(int i=0;i<strlen(word);i++)
  {
  	blank[i]='_';
  }
  while(a!=count)
  {
  if (guess!=6)
  {
  dashes();
  hangman();
  search();
  move();
  system("cls");
  printf("%d",guess);
  checkforwin();
}
else
break;
}
  
  }


