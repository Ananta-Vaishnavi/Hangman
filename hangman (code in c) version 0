#include <stdio.h>
#include<string.h>
#include<stdlib.h>
#include<ctype.h>
void dashes();
void search();
void hangman();
void checkforwin();
void move();
char blank[70],letter;
int guess=0,a,count,h;
char word[70]="Command";
void dashes()
{
  	
  int j=0;
  for (int i=0;i<strlen(word);i++)
  {

  if (word[i]==' '||i==0)
  {
   int c=0;
   printf("\n\n\n--> ");
  for(j=i;word[j]!=' ';j++)
  c++;
 }  
  if(word[i]!=' ')
  printf(" %c ",blank[i]);
          
}               
}
void search()
{

	printf("\n\n\n==>Make your guess\n");
	scanf("%c",&letter);
	for (int i=0;i<strlen(word);i++)
	{
		if(word[i]==letter)
		{
		blank[i]=letter;
		}
	   
	}
   	
}
void move()
{
	int b=0;
	for (int i=0;i<strlen(word);i++)
	{
		if(word[i]==letter)
		{
		b++;
		}
	}
	if(b==0)
	guess++;
}
